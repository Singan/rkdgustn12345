<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.naver.repository.mapper.CommentMapper">
	
	<resultMap id="commentMap" type="comment"></resultMap>
	
	<select id="listComment" parameterType="int" resultMap="commentMap">
		select * 
		from to_comment
		where board_no = #{board_no}
	</select>
		
	<insert id="insertComment" parameterType="comment">
		insert into to_comment(
			comment_no, board_no, comment_content, member_name
		) values(
			comment_no_seq.nextval, #{board_no}, #{comment_content}, #{member_name}
		)
	</insert>
	
	<delete id="deleteComment" parameterType="int">
		delete 
		from to_comment
		where comment_no = #{comment_no}
	</delete>
</mapper>