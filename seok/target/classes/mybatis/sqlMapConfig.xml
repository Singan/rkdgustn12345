<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 설정파일에서 사용할 프로퍼티의 파일의 경로 지정: classpath -->
	<properties resource="config/mybatis/db.properties"/>
	
	<!-- SQL의 결과를 담을 VO 객체들의 별칭을 설정하여 사용의 편의를 도모  -->
	<typeAliases>
		<typeAlias alias="friend" type="com.naver.repository.domain.friendMapper"/>
		<typeAlias alias="login" type="com.naver.repository.domain.LoginMapper"/>
		<typeAlias alias="signUp" type="com.naver.repository.domain.SignUpMapper"/>
		<typeAlias alias="free" type="com.naver.repository.domain.FreeMapper"/>
		<typeAlias alias="quiz" type="com.naver.repository.domain.QuizMapper"/>
		<typeAlias alias="question" type="com.naver.repository.domain.QuestionMapper"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper url="config/friend.xml" />
		<mapper url="config/login.xml" />
		<mapper url="config/signUp.xml" />
		<mapper url="config/freeBoard.xml" />
		<mapper url="config/Question.xml" />
		<mapper url="config/Quiz.xml" />
	</mappers>
</configuration>